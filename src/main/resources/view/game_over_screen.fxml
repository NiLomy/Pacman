<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="screen"
            fx:controller="ru.kpfu.itis.lobanov.controller.impl.GameOverScreenController">

    <children>
        <VBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="80" AnchorPane.rightAnchor="10"
              AnchorPane.leftAnchor="10">
            <Label fx:id="gameOverLabel"
                   style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 44; -fx-font-weight: bold"/>
            <Label fx:id="statistics" text="%game.stats" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 30"/>
            <HBox spacing="50" alignment="CENTER">
                <Label fx:id="playerScoresLabel" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 26"/>
                <Label fx:id="timePassedLabel" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 26"/>
            </HBox>
            <Button fx:id="goBackBtn" text="%go_back"
                    style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'; -fx-cursor: pointer">
                <VBox.margin>
                    <Insets>
                        <top>20</top>
                    </Insets>
                </VBox.margin>
            </Button>
        </VBox>
    </children>

</AnchorPane>
