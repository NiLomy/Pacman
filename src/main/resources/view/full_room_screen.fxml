<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="screen"
            fx:controller="ru.kpfu.itis.lobanov.controller.impl.FullRoomController"
            prefHeight="400.0" prefWidth="600.0">

    <Button fx:id="backBtn" text="%go_back_rooms" AnchorPane.topAnchor="32" AnchorPane.leftAnchor="20"
            style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'"/>

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">
        <Label fx:id="fullRoomText" text="%room.full"
               style="-fx-font-size: 40; -fx-alignment: center; -fx-text-alignment: center; -fx-font-weight: bold; -fx-font-family: 'Comic Sans MS'"/>
    </VBox>

</AnchorPane>
