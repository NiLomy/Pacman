<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="screen"
            fx:controller="ru.kpfu.itis.lobanov.controller.impl.NetErrorScreenController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">
            <Label fx:id="lostConnectionText" text="%game.net.lost"
                   style="-fx-font-size: 40; -fx-alignment: center; -fx-text-alignment: center; -fx-font-weight: bold; -fx-font-family: 'Comic Sans MS'"/>
            <Button fx:id="goBackBtn" text="%go_back"
                    style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'; -fx-cursor: pointer">
                <VBox.margin>
                    <Insets>
                        <top>20</top>
                    </Insets>
                </VBox.margin>
            </Button>
        </VBox>
    </children>

</AnchorPane>
