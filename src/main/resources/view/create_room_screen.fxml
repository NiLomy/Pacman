<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.kpfu.itis.lobanov.controller.impl.CreateRoomScreenController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox AnchorPane.topAnchor="32.0" AnchorPane.leftAnchor="20">
            <Button fx:id="backBtn" text="%go_back" style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'"/>
        </VBox>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="88" AnchorPane.rightAnchor="10"
              AnchorPane.leftAnchor="10">
            <HBox spacing="100" alignment="CENTER">
                <VBox spacing="20" alignment="CENTER">
                    <Label text="%input.port" styleClass="label-small" style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'"/>
                    <TextField fx:id="setPort" maxWidth="112" style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'; -fx-text-alignment: center; -fx-alignment: center"/>
                    <Label fx:id="emptyPort" visible="false" textFill="red" text="%input.port.empty" style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'; -fx-text-alignment: center; -fx-alignment: center"/>
                    <Label text="%input.players_count" styleClass="label-small" style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'">
                        <VBox.margin>
                            <Insets>
                                <top>40</top>
                            </Insets>
                        </VBox.margin>
                    </Label>
                    <Slider fx:id="setPlayerCount" value="2" showTickLabels="true" min="2" max="4" maxWidth="140" style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'; -fx-text-alignment: center; -fx-alignment: center"/>
                </VBox>
                <VBox fx:id="panel" spacing="20" alignment="CENTER">
                    <Button fx:id="changeBtn" text="%map.change" style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'">
                        <VBox.margin>
                            <Insets>
                                <top>20</top>
                            </Insets>
                        </VBox.margin>
                    </Button>
                </VBox>
            </HBox>
        </VBox>
        <VBox AnchorPane.bottomAnchor="76" AnchorPane.rightAnchor="20" AnchorPane.leftAnchor="20" alignment="CENTER">
            <Button fx:id="submit" text="%server.start" style="-fx-font-size: 24; -fx-font-family: 'Comic Sans MS'"/>
        </VBox>
    </children>

</AnchorPane>
