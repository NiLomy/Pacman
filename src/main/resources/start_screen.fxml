<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.kpfu.itis.lobanov.controller.StartScreenController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">
            <ImageView>
                <image>
                    <Image url="/images/pacman.jpg" requestedWidth="350.0" requestedHeight="250.0"/>
                </image>
            </ImageView>
            <Button fx:id="startPlay" prefWidth="0" text="Start Play" VBox.vgrow="ALWAYS" minWidth="100.0"/>
            <Button fx:id="settings" prefWidth="0" text="Settings" VBox.vgrow="ALWAYS" minWidth="100.0"/>
        </VBox>
    </children>

</AnchorPane>
